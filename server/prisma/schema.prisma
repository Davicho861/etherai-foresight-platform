generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String
  sector    String?
  message   String?
  createdAt DateTime @default(now())
}

model ModuleData {
  id        String   @id @default(cuid())
  country   String
  category  String
  value     Float
  label     String
  timestamp DateTime @default(now())
}

model KanbanTask {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   // PLANNING, DESIGN, IMPLEMENTATION, TESTING, DEPLOYMENT
  priority    String?  // Divine, High, Medium, Low
  assignee    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  order       Int      @default(0)
}
