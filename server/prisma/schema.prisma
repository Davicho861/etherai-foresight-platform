generator client {
  provider = "prisma-client-js"
}

// Use DATABASE_URL from environment for CI/Prod (Postgres). Fallbacks can be
// configured locally if needed.
// For native local development we use SQLite for maximum agility.
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String
  sector    String?
  message   String?
  createdAt DateTime @default(now())
}

model ModuleData {
  id        String   @id @default(cuid())
  country   String
  category  String
  value     Float
  label     String
  timestamp DateTime @default(now())
}
